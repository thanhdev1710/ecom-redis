# ================================
# Stage 1: Build
# ================================
FROM node:20-alpine AS builder
WORKDIR /app

RUN apk add --no-cache openssl

COPY package*.json ./
RUN npm install --legacy-peer-deps

COPY . .

# üîß Fix quy·ªÅn ghi cho th∆∞ m·ª•c .next (n·∫øu t·ªìn t·∫°i)
RUN mkdir -p .next/cache && chmod -R 777 .next

RUN npm run build

# ================================
# Stage 2: Run (Production)
# ================================
FROM node:20-alpine AS runner
WORKDIR /app

ENV NODE_ENV=production

# T·∫°o user an to√†n
RUN addgroup -g 1001 nodejs && adduser -D -u 1001 nextjs -G nodejs

# Copy c√°c file t·ªëi thi·ªÉu ƒë·ªÉ ch·∫°y
COPY --from=builder /app/public ./public
COPY --from=builder /app/.next/standalone ./
COPY --from=builder /app/.next/static ./.next/static

# Quy·ªÅn user non-root
USER nextjs

# Port m·∫∑c ƒë·ªãnh Next.js
EXPOSE 3000

# L·ªánh kh·ªüi ch·∫°y
CMD ["node", "server.js"]
